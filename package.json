{
	"name": "@xrr2016/mirror",
	"version": "0.2.0",
	"description": "A blog tool powered by GitHub issues",
	"preferGlobal": true,
	"bin": {
		"x-mirror": "./bin/mirror.js"
	},
	"scripts": {
		"start": "webpack-dev-server --inline --hot --port 1234",
		"test": "eslint ./src",
		"prebuild": "rm -f -R dist",
		"build": "cross-env NODE_ENV=production webpack --hide-modules --progress --colors",
		"postbuild": "cp src/assets/favicon.ico src/assets/promise.js dist && node bin/zip.js && cd dist && mv index.npm.html index.html"
	},
	"files": [
		"dist",
		"bin/mirror.js"
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/xrr2106/Mirror.git"
	},
	"keywords": [
		"blog",
		"issues",
		"github",
		"graphql"
	],
	"author": "LoeiFy@gmail.com",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/LoeiFy/Mirror/issues"
	},
	"homepage": "https://github.com/LoeiFy/Mirror",
	"devDependencies": {
		"archiver": "^1.3.0",
		"babel-core": "^6.25.0",
		"babel-loader": "^7.1.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"babel-runtime": "^6.23.0",
		"cross-env": "^5.0.1",
		"css-loader": "^0.28.4",
		"eslint": "^4.13.1",
		"eslint-config-airbnb-base": "^12.1.0",
		"eslint-plugin-import": "^2.8.0",
		"github-markdown-css": "^2.8.0",
		"html-webpack-plugin": "^2.28.0",
		"postcss-cssnext": "^2.11.0",
		"postcss-import": "^10.0.0",
		"postcss-loader": "^2.0.6",
		"style-loader": "^0.18.2",
		"svg-inline-loader": "^0.7.1",
		"webpack": "^2.6.1",
		"webpack-dev-server": "^2.7.1"
	},
	"dependencies": {
		"axios": "^0.16.2",
		"commander": "^2.9.0",
		"fs-extra": "^3.0.1",
		"yamljs": "^0.2.10"
	}
}
